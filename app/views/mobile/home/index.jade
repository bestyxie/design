extends ../../layout

block content
  .home.page
    include ../../includes/header
    .content.native-scroll.wrapper
      .banner.slide-box
        .swiper_wrap
          .wipe_img_con
            a.swiper_wrap_a(href="/activity/#{acts[acts.length-1]._id}")
              img(src="#{acts[acts.length-1].pic}")
          each act in acts
            .wipe_img_con
              a.swiper_wrap_a(href="/activity/#{act._id}")
                img(src="#{act.pic}")
          .wipe_img_con
            a.swiper_wrap_a(href="/activity/#{acts[0]._id}")
              img(src="#{acts[0].pic}")
      .shopin-head
        hr
        span 热卖单品
      .wall
        .wal-list.clearfix
          .wall-col.lf
            each product,index in products
              if index%2==0
                .wall-item
                  a.thumbnail(href="/details/#{product._id}",external)
                    .img
                      img(src="#{product.pics[0]}")
                    .caption
                      p.name #{product.name}
                      .priceattention.clearfix
                        p.price ￥#{product.price}
                        span.attention.rt 1841
                          i.fa.fa-heart-o.lf
          .wall-col.rt
            each product,index in products
              if index%2!=0
                .wall-item
                  a.thumbnail(href="/details/#{product._id}",external)
                    .img
                      img(src="#{product.pics[0]}")
                    .caption
                      p.name #{product.name}
                      .priceattention.clearfix
                        p.price ￥#{product.price}
                        span.attention.rt 1841
                          i.fa.fa-heart-o.lf
    include ./_search

