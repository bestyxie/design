extends ../../layout

block content
  .home.search-page.page
    include ../../includes/header
    .wall
      .wal-list.clearfix
        if products.length == 0
          p 没有您要找的内容，请重新搜索
        else
          .wall-col.lf
            each product,index in products
              if index%2==0
                .wall-item
                  a.thumbnail(href="/details/#{product._id}",external)
                    .img
                      img(src="#{product.pics[0]}")
                    .caption
                      p.name #{product.name}
                      .priceattention.clearfix
                        p.price ￥#{product.price}
                        span.attention.rt 1841
                          i.fa.fa-heart-o.lf
          .wall-col.rt
            each product,index in products
              if index%2!=0
                .wall-item
                  a.thumbnail(href="/details/#{product._id}",external)
                    .img
                      img(src="#{product.pics[0]}")
                    .caption
                      p.name #{product.name}
                      .priceattention.clearfix
                        p.price ￥#{product.price}
                        span.attention.rt 1841
                          i.fa.fa-heart-o.lf
    include ../home/_search