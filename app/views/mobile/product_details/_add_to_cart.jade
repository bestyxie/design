.mask.j-popup
  .pop.add_to_cart
    .modal-header
      i.icon.close_icon.j-close ╳
      .subtitle-img
        img(src="#{product.pics[0]}")
      .subtitle-desc
        p.subtitle-text #{product.name}
        .info-price
          span.pirce  &yen;#{product.price * product.discount/10}
          span.stock 库存#{product.stock}件
    .modal-content
      .condiction.j-style(data-rules="single",data-type="color")
        label 颜色：
        each color in product.color
          span #{color}
      .condiction.j-style(data-rules="single",data-type="size")
        label 尺寸
        each size in product.size
          span #{size}
      .condiction
        label 数量：
        .qty-box
          span.num-reduce.lf.j-reduct -
          em.num-input.lf.j-num 1
          span.num-add.lf.j-add +
    .modal-footer
      span.button.j-confirm 确认