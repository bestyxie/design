extends ../../layout

block content
  .page.express
    header.head-block.bar.bar-nav.header
      a.arr(href="javascript:history.back();")
        i.fa.fa-angle-left
      h1.title 所以评价
    .content.native-scroll.wrapper
      .section
        p 已发货
        p 订单号：#{orderid}
      .section
        p #{express.com}
        p 快递单号：#{express.nu}
      .section
        each exp,index in express.data
          .express-context
            if index == 0
              .line.on
              .block.on
                p.context #{exp.context}
                p.time #{exp.time}
            else
              .line
              .block
                p.context #{exp.context}
                p.time #{exp.time}