extends ../../adminLayout

block content
  h2 新建活动
  .wrapper.new_act
    from#new_activity(action="",method="POST",enctype="multipart/form-data")
      .form-group.uploadPic-form
        label 图片*
        a.newpic(href="javascrip:void(0);")
          i.fa.fa-plus
        input.required.hide(type="file",name="pics",accept="image/*")
      .form-group
        label 折扣
        .input-box
          input.rqrednum(type="text",name="act[discount]")
      .productlist.section
        .head
          label 按类搜索
          .select
            button.dropdown-toggle(type="button",data-id="labels")
              em 商品名称
              i.fa.fa-chevron-down
            ul.dropdown-menu#labels
              li.item
                a(href="#") 商品名称
              li.item
                a(href="#") 标签
          input.seach(type="text")
          a.submit 确定
        table
          thead
            tr
              td
                input(type="checkbox")
                | 全部
              td 图片
              td 商品名称
              td 商品分类
          tbody.j-product-list
            each product in products
              tr
                td
                  input(type="checkbox",name="products",value="act[#{product._id}]")
                td
                  .imgbox
                    img(src="#{product.pics[0]}")
                td #{product.name}
                td #{product.labels.join(' ')}
  .footer
    button.btn.btn-primary.confirm.j-confirm 确定
    a.btn.btn-default(href="/admin") 取消


block scripts